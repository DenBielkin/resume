{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <div>
        <h1>{{name}}</h1>
    </div>
    <div>
        <p><b>{{birthdate}} - {{deathdate}}</b></p>
        <p>Birthplace: <b>{{birthplace}}</b></p>
        <p>Deathplace: <b>{{deathplace}}</b></p>
        <p>Nationality: <b>{{nationality}}</b></p>
        <p>Occupation: <b>{{occupation}}</b></p>
        <hr>
    <div>
        <h2>Known</h2>
    </div>
    <div>
        <ul>
            {{#each known_for}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h2>Education</h2>
    </div>
    <div>
        <ul>
            {{#each education}}
                <li>{{degree}}</li>
                <li>{{field}}</li>
                <li>{{institution}}</li>
                <li>{{year}}</li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h2>Publications</h2>
    </div>
    <div>
        <ul>
            {{#each notable_publications}}
                <li>{{title}}</li>
                <li>{{year}}</li>
                <li>{{publisher}}</li>
                <br>
            {{/each}}
        </ul>
    </div>
    <div>
        <h2>Partners</h2>
    </div>
    <div>
        <ul>
            {{#each partners}}
                <li>{{name}}</li>
                <li>{{relationship}}</li>
                <li>{{years}}</li>
                <br>
            {{/each}}
        </ul>
    </div>
    <div>
        <h2>Awards</h2>
    </div>
    <div>
        <ul>
            {{#each awards}}
                <li>{{title}}</li>
                <li>{{year}}</li>
                <li>{{description}}</li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h2>Influences</h2>
    </div>
    <div>
        <ul>
            {{#each influences}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h2>Influenced</h2>
    </div>
    <div>
        <ul>
            {{#each influenced}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h2>Quotes</h2>
    </div>
    <div>
        <ul>
            {{#each quotes}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h2>Major Discoveries</h2>
    </div>
    <div>
        <ul>
            {{#each major_discoveries}}
                <li>{{title}}</li>
                <li>{{year}}</li>
                <li>{{description}}</li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h2>Contributionss</h2>
    </div>
    <div>
        <ul>
            {{#with contributions}}
                <li>{{title}}</li>
                <li>{{description}}</li>
                <li>{{year}}</li>
                <li>{{field}}</li>
            {{/with}}
        </ul>
    </div>
</div>



