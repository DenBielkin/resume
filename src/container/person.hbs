{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
        <div>
            <h1>{{name}}</h1>
        </div>
        <div>
            <b>Age: {{age}}</b>
        </div>
        <div>
            <b>Gnder: {{gender}}</b>
        </div>
        <hr>
        {{#with address}}
            <em>{{street}}, 
                {{city}}, 
                {{state}}, 
                {{zip}}, 
                {{country}}
            </em>
        {{/with}}  
        <br>
        <br>
    
        <h2>Education</h2>
            <div>
                <ul>
                    {{#each education}}
                        <p><b>Degree:</b> {{degree}}</p>
                        <p><b>Major</b>: {{major}}</p>
                        <p><b>University:</b> {{university}}</p>
                        <p><b>GraduationYear:</b> {{graduationYear}}</p>
                    {{/each}}
                </ul>
            </div>      
            
        <h2>WorkExperience</h2>
            <div>
                <ul>
                    {{#each workExperience}}
                        <p><b>Company:</b> {{company}}</p>
                        <p><b>Title:</b> {{title}}</p>
                        <p><b>StartDate:</b> {{startDate}}</p>
                        <p><b>EndDate:</b> {{endDate}}</p>
                        <p><b>Respon-es:</b> {{responsibilities}}</p>
                        <p><b>Year_founded:</b> {{year_founded}}</p>
                        <p><b>Industry:</b> {{industry}}</p>
                        <p><b>Employees:</b></p>
                        <ul>
                            {{#each employees}}
                                <li>Name: {{name}}</li>
                                <li>Position: {{position}}</li>
                                <li>Department: {{department}}</li>
                                <p><b>Projects:</b></p>
                                <ul>
                                    {{#each projects}}
                                        <li>Name: {{name}}</li>
                                        <li>Description: {{description}}</li>
                                        <li>Status: {{status}}</li>
                                        <p><b>Teams:</b></p>
                                        <ul>
                                            {{#each teams}}
                                                <p><b>Name:</b></p>
                                                <ul>
                                                    <li>{{team_name}}</li>
                                                </ul>
                                                <p><b>Leader:</b></p>
                                                    <ul>
                                                        {{#with team_leader}}
                                                            <li>{{name}}</li>
                                                            <li>{{title}}</li> 
                                                            <li>{{email}}</li>
                                                        {{/with}}
                                                    </ul>
                                                <p><b>Members:</b></p>
                                                <ul>
                                                    {{#each team_members}}
                                                        <li>{{name}}</li>
                                                        <li>{{title}}</li>
                                                        <li>{{email}}</li>
                                                        <li>{{skills}}</li>
                                                        <p><b>Projects:</b></p>
                                                        <ul>
                                                            {{#each projects}}
                                                                <li>{{name}}</li>
                                                                <li>{{description}}</li>
                                                                <li>{{technologies}}</li>
                                                                <p><b>Team members:</b></p>
                                                                <ul>
                                                                    {{#each team_members}}
                                                                        <li>{{name}}</li>
                                                                        <li>{{title}}</li>
                                                                        <br>
                                                                    {{/each}}
                                                                </ul>
                                                            {{/each}}
                                                        </ul>
                                                    {{/each}}
                                                </ul> 
                                            {{/each}}
                                        </ul>
                                    {{/each}}
                                </ul>
                            {{/each}}
                        </ul>
                    {{/each}}
                </ul>
            </div>                    
    {{/with}}        
</div>



